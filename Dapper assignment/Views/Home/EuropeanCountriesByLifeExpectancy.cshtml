@model List<Country>
@{
    ViewData["Title"] = "List of european countries by life expectancy, ordered high to low";
}
<h1>@ViewData["Title"]</h1>

<p>Here is the result of the query:</p>

<table>
    <tr>
        <td>Code</td>
        <td>Name</td>
        <td>Region</td>
        <td>Life expectancy</td>
    </tr>
    @foreach (Country country in @Model)
    {
        <tr>
            <td>@country.Code</td>
            <td>@country.Name</td>
            <td>@country.Region</td>
            <td>@country.LifeExpectancy</td>
        </tr>
    }

</table>

